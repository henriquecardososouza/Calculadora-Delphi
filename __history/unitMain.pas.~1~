    Button03: TButton;
    ButtonMais: TButton;
    Panel2: TPanel;
    Visor: TEdit;
    procedure Button07Click(Sender: TObject);
    procedure Button08Click(Sender: TObject);
    procedure Button09Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

