unit unitMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm2 = class(TForm)
    Panel1: TPanel;
    ButtonAc: TButton;
    ButtonC: TButton;
    ButtonDividido: TButton;
    Button07: TButton;
    Button08: TButton;
    Button09: TButton;
    Button06: TButton;
    Button04: TButton;
    Button05: TButton;
    ButtonPonto: TButton;
    Button00: TButton;
    ButtonIgual: TButton;
    ButtonMenos: TButton;
    ButtonVezes: TButton;
    Button01: TButton;
